for filename in myFiles:
	print(os.path.join('usr', 'bin', filename))
  # вывод: usr\bin\account.txt
          usr\bin\details.csv
          usr\bin\invite.docx


os.getcwd() # Вывод текущего каталога Пример C:\\Python
